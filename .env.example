# ==============================================
# ElementaMon Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values

# ---------------------------------------------
# Node Environment
# ---------------------------------------------
NODE_ENV=development

# ---------------------------------------------
# Database Configuration
# ---------------------------------------------
# PostgreSQL (Auth, Backoffice, Analytics)
POSTGRES_PASSWORD=your_postgres_password
DATABASE_URL=postgresql://postgres:your_postgres_password@localhost:5432/elementamon

# MongoDB (Game Data)
MONGO_PASSWORD=your_mongo_password
MONGODB_URI=mongodb://admin:your_mongo_password@localhost:27017/elementamon_game?authSource=admin

# Redis (Caching & Sessions)
REDIS_PASSWORD=your_redis_password
REDIS_URL=redis://:your_redis_password@localhost:6379

# ---------------------------------------------
# Authentication
# ---------------------------------------------
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# NextAuth (Backoffice)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key

# OAuth Providers (Backoffice SSO)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
AZURE_AD_CLIENT_ID=your_azure_client_id
AZURE_AD_CLIENT_SECRET=your_azure_client_secret
AZURE_AD_TENANT_ID=your_azure_tenant_id

# ---------------------------------------------
# Payment Providers
# ---------------------------------------------
# Stripe
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox # or 'live'

# PIX (Brazil)
PIX_API_KEY=your_pix_api_key
PIX_MERCHANT_ID=your_merchant_id

# Crypto (Coinbase Commerce)
COINBASE_API_KEY=your_coinbase_api_key
COINBASE_WEBHOOK_SECRET=your_webhook_secret

# ---------------------------------------------
# AI Services
# ---------------------------------------------
# OpenAI (GPT-4 for NPC dialogue)
OPENAI_API_KEY=sk-...
OPENAI_ORG_ID=org-...

# DALL-E (Image generation)
DALLE_API_KEY=sk-...

# ElevenLabs (Voice synthesis)
ELEVENLABS_API_KEY=your_elevenlabs_key

# Azure Cognitive Services (Fallback TTS)
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=eastus

# Content Moderation
OPENAI_MODERATION_KEY=sk-...

# ---------------------------------------------
# Cloud Storage
# ---------------------------------------------
# AWS S3 (Game assets, sprites)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=elementamon-assets

# Cloudinary (Marketing site, backoffice)
CLOUDINARY_CLOUD_NAME=elementamon
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ---------------------------------------------
# Email Services
# ---------------------------------------------
# SendGrid (Transactional emails)
SENDGRID_API_KEY=SG.your_sendgrid_key
SENDGRID_FROM_EMAIL=noreply@elementamon.com
SENDGRID_FROM_NAME=ElementaMon

# SMTP (Fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ---------------------------------------------
# Monitoring & Analytics
# ---------------------------------------------
# Sentry (Error tracking)
SENTRY_DSN=https://...@sentry.io/...
SENTRY_AUTH_TOKEN=your_auth_token
SENTRY_ORG=elementamon
SENTRY_PROJECT=elementamon-game

# Application Insights (Azure monitoring)
APPINSIGHTS_INSTRUMENTATIONKEY=your_instrumentation_key

# Datadog (APM & Logs)
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Hotjar (Heatmaps)
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id

# ---------------------------------------------
# Ads & Monetization
# ---------------------------------------------
# Google AdMob
ADMOB_APP_ID_ANDROID=ca-app-pub-...
ADMOB_APP_ID_IOS=ca-app-pub-...
ADMOB_REWARDED_AD_UNIT_ID=ca-app-pub-.../rewarded

# Unity Ads
UNITY_GAME_ID_ANDROID=your_game_id
UNITY_GAME_ID_IOS=your_game_id

# ---------------------------------------------
# Social Integration
# ---------------------------------------------
# Discord Bot
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_client_id
DISCORD_GUILD_ID=your_guild_id

# Twitter/X API
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# Facebook Graph API
FACEBOOK_APP_ID=your_app_id
FACEBOOK_APP_SECRET=your_app_secret

# ---------------------------------------------
# WebSocket Configuration
# ---------------------------------------------
WEBSOCKET_PORT=8080
WEBSOCKET_PATH=/socket.io

# ---------------------------------------------
# Rate Limiting
# ---------------------------------------------
RATE_LIMIT_WINDOW_MS=60000 # 1 minute
RATE_LIMIT_MAX_REQUESTS=100

# ---------------------------------------------
# CORS Configuration
# ---------------------------------------------
CORS_ORIGIN=http://localhost:4200,http://localhost:3000

# ---------------------------------------------
# Feature Flags
# ---------------------------------------------
ENABLE_AI_MODERATION=true
ENABLE_CRYPTO_PAYMENTS=false
ENABLE_PVP_MATCHMAKING=true
ENABLE_GACHA_PITY_SYSTEM=true
ENABLE_DAILY_REWARDS=true

# ---------------------------------------------
# Deployment
# ---------------------------------------------
# Vercel
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_org_id
VERCEL_PROJECT_ID=your_project_id

# Docker Registry
DOCKER_REGISTRY=ghcr.io
DOCKER_USERNAME=magas-xlr
DOCKER_PASSWORD=your_personal_access_token

# Kubernetes
KUBE_CONFIG_PATH=~/.kube/config
KUBE_NAMESPACE=elementamon-prod

# ---------------------------------------------
# Security
# ---------------------------------------------
# Encryption keys
ENCRYPTION_KEY=your_32_character_encryption_key
ENCRYPTION_ALGORITHM=aes-256-cbc

# Session secret
SESSION_SECRET=your_session_secret_key

# CSRF protection
CSRF_SECRET=your_csrf_secret

# ---------------------------------------------
# Backup Configuration
# ---------------------------------------------
BACKUP_S3_BUCKET=elementamon-backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM
